@using Airline.Models.Models
@{
    ViewBag.Title = "Request";
}

<div class="row">
    <div class="col">
        <h2>Requests</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Text</th>
                    <th scope="col">Status</th>
                    <th scope="col">Done</th>
                    <th scope="col">Reject</th>
                </tr>
            </thead>
            @foreach (Request request in Model)
            {
                <tbody>
                    <tr>
                        <td>@request.Id</td>
                        <td>@request.Text</td>
                        @if (request.StatusBefore)
                        {
                            if (request.StatusAfter)
                            {
                                <th>Done</th>
                            }
                            else
                            {
                                <th>Reject</th>
                            }
                        }
                        else
                        {
                            <th>Active</th>
                            <th>
                                @Html.ActionLink("Done", "RequestStatusDone", "Admin", new { id = request.Id }, new { onclick = "return confirm('Are you sure?)", @class = "submit" })
                            </th>
                            <th>
                                @Html.ActionLink("Reject", "RequestStatusReject", "Admin", new { id = request.Id }, new { onclick = "return confirm('Are you sure?)", @class = "submit" })
                            </th>
                        }
                        </tr>
                </tbody>
            }
        </table>
    </div>
</div>

